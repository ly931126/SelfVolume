<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_weight="1"
        android:id="@+id/volume_add_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/volume_add_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/add_volume"
        android:textColor="@drawable/text_color_selector"
        android:textSize="@dimen/text_size_normal"/>

    <com.liye.study.selfvolumecircleprogrssbar.VolumeProgressBar
        android:layout_weight="1"
        android:id="@+id/circle_progress_bar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        />

    <TextView
        android:id="@+id/volume_reduce_img_btn"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/volume_reduce_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/reduce_volume"
        android:textColor="@drawable/text_color_selector"
        android:textSize="@dimen/text_size_normal"/>
</LinearLayout>
